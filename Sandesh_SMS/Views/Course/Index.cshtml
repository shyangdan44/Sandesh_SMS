@model IEnumerable<CourseViewModel>
@{
    ViewData["Title"] = "All Course";
}

<div class="container p-4">
    <div class="row">
        <div class="col-md-12">
            <h3 class="p-4">All Course</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 p-4">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Course</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var clas in Model)
                    {
                        <tr>
                            <th scope="row">@clas.CourseId</th>
                            <td>@clas.CourseName</td>
                            <td><a class="btn btn-dark" asp-action="Edit" asp-controller="Course" asp-route-id="@clas.CourseId">Edit</a></td>
                            <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Course" asp-route-id="@clas.CourseId" onClick="return confirm('Are you sure you want to delete this Course?')">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>