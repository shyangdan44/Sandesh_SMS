@model IEnumerable<ClassViewModel>
@{
    ViewData["Title"] = "All Class";
}

<div class="container p-4">
    <div class="row">
        <div class="col-md-12">
            <h3 class="p-4">All Class</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 p-4">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Class</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var clas in Model)
                    {
                        <tr>
                            <th scope="row">@clas.ClassId</th>
                            <td>@clas.ClassName</td>
                            <td><a class="btn btn-dark" asp-action="Edit" asp-controller="Class" asp-route-id="@clas.ClassId">Edit</a></td>
                            <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Class" asp-route-id="@clas.ClassId" onClick="return confirm('Are you sure you want to delete this class?')">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>