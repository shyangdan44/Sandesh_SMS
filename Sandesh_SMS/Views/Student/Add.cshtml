
@model StudentViewModel
@{
    ViewData["Title"] = "All Student";
}
<div class="p-4 container">
    <div class="row p-4">
        <div class="col-md-12">
            <h3>Add new student</h3>
        </div>
    </div>
    <div class="row p-4">
        <div class="col-md-6">
            <form asp-controller="Student" asp-action="Add" method="post" enctype="multipart/form-data" >
                <div class="mb-3">
                    <label for="FirstName" class="form-label fw-bold">First Name</label>
                    <input asp-for="FirstName" type="text" class="form-control">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="LastName" class="form-label fw-bold">Last Name</label>
                    <input asp-for="LastName" type="text" class="form-control">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="datetimepicker" class="form-label fw-bold">Date of Birth</label>
                    <input asp-for="DateOfBirth" type="date" class="form-control" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Gender" class="form-label fw-bold">Gender</label>
                    <div class="d-flex">
                        <div class="form-check px-4">
                            <input asp-for="Gender" class="form-check-input" value="male" type="radio">
                            <label class="form-check-label fw-bold" for="Gender">
                                Male
                            </label>
                        </div>
                        <div class="form-check px-4">
                            <input asp-for="Gender" class="form-check-input" value="female" type="radio">
                            <label class="form-check-label fw-bold" for="Gender">
                                Female
                            </label>
                        </div>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="Email" class="form-label fw-bold">Email</label>
                    <input asp-for="Email" type="email" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="PhoneNumber" class="form-label fw-bold">Phone Number</label>
                    <input asp-for="PhoneNumber" type="number" class="form-control">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Address" class="form-label fw-bold">Address</label>
                    <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Please choose Class</label>
                    <select asp-for="ClassId" asp-items="ViewBag.Classes"></select>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Please choose Course</label>
                    <select asp-for="CourseId" asp-items="ViewBag.Courses"></select>
                </div>
                <div class="mb-3">
                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActive" checked>
                        <label class="form-check-label fw-bold" for="isActive">Mark as Active</label>
                    </div>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>
                @* <div class="mb-3">
                    <label for="StdProfile" class="form-label fw-bold"></label>
                    <div class="customFile">
                        <input asp-for="StdProfile" type="file" class="form-control" id=" customFile">
                        <lebal  class="custom-file-labal" for="custom file">Choose File</lebal>
                    </div>
                    <span asp-validation-for="StdProfile" class="text-denger"></span>
                </div> *@
               
                <button type="submit" class="btn btn-dark">Submit</button>

            </form>
        </div>

    </div>
</div>